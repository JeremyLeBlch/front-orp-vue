{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include" : [
    "env.d.ts",
    "src/**/**.*",
    "src/**/*.vue"
  ],
  "exclude" : [
    "src/**/__tests__/*"
  ],
  "compilerOptions" : {
    "composite" : true,
    "resolveJsonModule" : true,
    "experimentalDecorators" : true,
    "emitDecoratorMetadata" : true,
    "baseUrl" : ".",
    "strict" : false,
    "lib" : [
      "esnext",
      "dom"
    ],
    "paths" : {
      "@/*" : [
        "./src/*"
      ]
    }
  }
}